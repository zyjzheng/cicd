err() {
  echo "[$(date +'%Y-%m-%dT%H:%M:%S%z')]: $@" >&2
  exit 1
}

log() {
  echo "[$(date +'%Y-%m-%dT%H:%M:%S%z')]: $@" >&1
  echo "[$(date +'%Y-%m-%dT%H:%M:%S%z')]: $@" >> log.txt
}

check_err() {
  $1 2>&1 >> /dev/null  || err $2
}

